{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./bin",
        "allowJs": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "promise", "cli-color", "yargs"],
        "lib": ["es5", "es2017", "es2015.promise", "es2016.array.include"],
        "target": "es5",
        "noImplicitAny": true,
        "noEmit": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "noUnusedParameters": true,
        "sourceMap": true
    },

    "include": [
        "src/**/*"
    ],

    "exclude": [
        "./node_modules",
        "./bin",
        "./coverage",
        "./img",
        "./tests",
        "./tmpTests"
    ]
}